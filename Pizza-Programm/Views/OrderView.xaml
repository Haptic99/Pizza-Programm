<UserControl x:Class="Pizza_Programm.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza_Programm.Views"
             xmlns:vm="clr-namespace:Pizza_Programm.ViewModels"
             xmlns:converters="clr-namespace:Pizza_Programm.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <UserControl.DataContext>
        <vm:OrderViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="5">
            <StackPanel>
                <TextBlock Text="Menü" FontSize="16" FontWeight="Bold"/>
                <ListView ItemsSource="{Binding Menu}" 
                          SelectedItem="{Binding SelectedPizzaFromMenu}"
                          Height="400">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Pizza" DisplayMemberBinding="{Binding Name}" Width="150"/>
                            <GridViewColumn Header="Preis" DisplayMemberBinding="{Binding Price, StringFormat=C}" Width="70"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5">
            <Button Content="-> Hinzufügen" 
                    Command="{Binding AddToCartCommand}" 
                    Width="100" Margin="5"/>

            <Button Content="&lt;- Entfernen" 
                    Command="{Binding RemoveFromCartCommand}" 
                    Width="100" Margin="5"/>
        </StackPanel>

        <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="5">
            <StackPanel>
                <TextBlock Text="Warenkorb" FontSize="16" FontWeight="Bold"/>

                <ListView ItemsSource="{Binding Cart}" 
                          SelectedItem="{Binding SelectedCartItem}"
                          DisplayMemberPath="DisplayName"
                          Height="300"
                          Margin="0,0,0,10"/>

                <TextBlock Text="Bemerkung (Gesamt):"/>
                <TextBox Text="{Binding CustomerNote, UpdateSourceTrigger=PropertyChanged}" 
                         Height="40" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <TextBlock Text="{Binding TotalPrice, StringFormat='Gesamt: {0:C}'}" 
                         FontSize="18" FontWeight="Bold" HorizontalAlignment="Right"/>

                <Button Content="Bestellung abschicken" 
                        Command="{Binding SubmitOrderCommand}"
                        Background="LightGreen" Height="40" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="3" BorderBrush="DarkBlue" BorderThickness="2" Padding="5" Margin="10,0,0,0">
            <StackPanel DataContext="{Binding SelectedCartItem}">

                <TextBlock Text="Pizza im Warenkorb auswählen, um Zutaten anzupassen."
                           TextWrapping="Wrap"
                           Visibility="{Binding RelativeSource={RelativeSource Self}, Path=DataContext, Converter={StaticResource NullToVisibilityConverter}}"/>

                <StackPanel Visibility="{Binding RelativeSource={RelativeSource Self}, Path=DataContext, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Invert}">

                    <TextBlock Text="{Binding BasePizza.Name}" FontSize="16" FontWeight="Bold" Foreground="DarkBlue"/>
                    <TextBlock Text="Kundenwünsche (Zutaten entfernen):" Margin="0,10,0,5"/>

                    <ScrollViewer Height="350" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding CustomizableIngredients}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Ingredient.Name}" 
                                              IsChecked="{Binding IsSelected}" 
                                              Margin="5"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>