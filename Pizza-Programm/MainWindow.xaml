<Window x:Class="Pizza_Programm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza_Programm"
        xmlns:views="clr-namespace:Pizza_Programm.Views"
        mc:Ignorable="d"
        Title="Pizza-Shop Management" Height="600" Width="900">
    <Grid>
        <TabControl>
            <TabItem Header="Zutaten verwalten">
                <views:IngredientManagementView/>
            </TabItem>

            <TabItem Header="Pizzen verwalten">
                <views:PizzaManagementView/>
            </TabItem>

            <TabItem Header="Bestellungen (Kasse)">
                <views:OrderView/>
            </TabItem>

            <TabItem Header="Offene Bestellungen (Küche)">
                <TextBlock Text="Hier Warteschlange anzeigen..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>